<androidx.coordinatorlayout.widget.CoordinatorLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <fragment
        android:id="@+id/direct_ggmap_api"
        class="com.google.android.gms.maps.MapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:background="@drawable/radius_bottom_layout_custom"
        android:focusableInTouchMode="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/src_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/search_src_location_edt"
            android:src="@drawable/circle_icon"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:id="@+id/connect_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/src_icon"
            android:src="@drawable/more_icon"
            android:layout_marginLeft="2dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/connect_icon"
            android:src="@drawable/destination_icon"
            android:layout_marginLeft="2dp"/>

        <SearchView
            android:id="@+id/search_src_location_edt"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="top|center"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:background="@drawable/edittext_custom"
            android:iconifiedByDefault="false"
            android:queryHint="Điểm bắt đầu"
            android:searchHintIcon="@null"
            android:layout_marginTop="2dp"
            android:searchIcon="@null" />

        <SearchView
            android:id="@+id/search_dest_location_edt"
            android:layout_gravity="top|center"
            android:background="@drawable/edittext_custom"
            android:layout_width="match_parent"
            android:layout_below="@+id/search_src_location_edt"
            android:iconifiedByDefault="false"
            android:queryHint="Điểm kết thúc"
            android:searchIcon="@null"
            android:searchHintIcon="@null"
            android:layout_height="40dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="4dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:src="@drawable/swap_vert_icon"
            android:layout_marginRight="2dp"
            android:layout_marginTop="30dp"/>

        <RadioGroup
            android:orientation="horizontal"
            android:layout_marginTop="7dp"
            android:layout_below="@+id/search_dest_location_edt"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_height="35dp">
            <RadioButton
                android:id="@+id/walk_radiobutton"
                android:paddingHorizontal="16dp"
                android:button="@drawable/radiobutton_walk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<!--            <RadioButton-->
<!--                android:id="@+id/bike_radiobutton"-->
<!--                android:paddingHorizontal="16dp"-->
<!--                android:button="@drawable/radiobutton_bike"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->
            <RadioButton
                android:id="@+id/motobike_radiobutton"
                android:paddingHorizontal="16dp"
                android:button="@drawable/radiobutton_motobike"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/car_radiobutton"
                android:paddingHorizontal="16dp"
                android:button="@drawable/radiobutton_car"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <RadioButton
                android:id="@+id/bus_radiobutton"
                android:paddingHorizontal="6dp"
                android:button="@drawable/radiobutton_train"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
<!--            <RadioButton-->
<!--                android:id="@+id/airplane_radiobutton"-->
<!--                android:paddingHorizontal="6dp"-->
<!--                android:button="@drawable/radiobutton_airplane"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->
        </RadioGroup>

        <TextView
            android:id="@+id/result_src_location_text_view"
            android:layout_below="@+id/search_src_location_edt"
            android:padding="8dp"
            android:textColor="@color/black"
            android:drawableStart="@drawable/location_icon"
            android:background="@drawable/result_location_textview_custom"
            android:visibility="invisible"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/result_dest_location_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/search_dest_location_edt"
            android:background="@drawable/result_location_textview_custom"
            android:drawableStart="@drawable/location_icon"
            android:padding="8dp"
            android:textColor="@color/black"
            android:visibility="invisible" />
    </RelativeLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/locate_position_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/my_location_icon"
        android:layout_gravity="center|right"
        android:backgroundTint="#EDEDF1"
        app:fabSize="mini"/>
    <LinearLayout
        android:visibility="gone"
        android:weightSum="3"
        android:layout_gravity="bottom"
        android:layout_marginBottom="65dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:background="@drawable/radius_layout_custom">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="Quảng đường"/>
            <TextView
                android:id="@+id/distance_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="7749 km"
                android:drawableLeft="@drawable/road_icon"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <Button
                android:id="@+id/stop_record_btn"
                android:text="Stop"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/stop_record_button_custom"
                android:visibility="invisible"/>
            <Button
                android:id="@+id/record_btn"
                android:text="Ghi"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginLeft="4dp"
                android:layout_marginRight="4dp"
                android:background="@drawable/record_button_custom"/>
            <Button
                android:id="@+id/save_record_btn"
                android:text="Lưu"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:background="@drawable/save_record_button_custom"
                android:visibility="invisible"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="Thời gian"/>
            <TextView
                android:id="@+id/time_text_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="#000000"
                android:text="49 hour"
                android:drawableLeft="@drawable/time_icon"/>
        </LinearLayout>
    </LinearLayout>


</androidx.coordinatorlayout.widget.CoordinatorLayout>